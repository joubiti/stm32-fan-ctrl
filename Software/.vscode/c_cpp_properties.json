{
    "configurations": [
        {
            "name": "Win32",
            "includePath": [
                "${workspaceFolder}/**"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE",
                "USE_HAL_DRIVER",
                "STM32G070xx"
            ],
            // "compilerPath": "C:\\MinGW\\bin\\gcc.exe",
            "compilerPath": "${env:ARMGCC_DIR}/arm-none-eabi-gcc.exe",
            "compilerArgs": [
                "-mcpu=cortex-m3",
                "-mthumb"
            ],
            "cStandard": "c11",
            // "cppStandard": "gnu++14",
            "cppStandard" : "c++17",
            // "intelliSenseMode": "windows-gcc-x86"
            "intelliSenseMode": "gcc-arm"
        }
    ],
    "version": 4
}